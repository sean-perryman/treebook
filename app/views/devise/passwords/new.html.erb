<div class="container">
  <div class="row">
    <div class="col-md-4">
		<fieldset>
			<legend>Forgot your password?</legend>

			<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "well" }) do |f| %>
			  <%= devise_error_messages! %>

			  <%= f.input :email %>
			  <%= f.button :submit, "Send me reset password instructions" %>
			<% end %>

		</fieldset>
	</div>
  </div>
</div>

<%= render "devise/shared/links" %>
